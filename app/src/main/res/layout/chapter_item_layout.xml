<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/chapterItemBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#424242"
        app:layout_constraintBottom_toBottomOf="@+id/chapterTextView"
        app:layout_constraintEnd_toEndOf="@+id/chapterSizeTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/chapterTextView"
        app:layout_constraintTop_toTopOf="@+id/chapterTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/chapterTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="12dip"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:text="FileName"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/chapterSizeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chapterSizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="12dip"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/chapterTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chapterTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>